{
  "name": "@chrispyduck/publish-local-sensors",
  "description": "A nodejs service that reports readings from local hardware via MQTT",
  "version": "1.0.0",
  "author": {
    "name": "Chris Carlson",
    "url": "https://github.com/chrispyduck"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrispyduck/publish-local-sensors.git"
  },
  "keywords": [
    "Homie",
    "IoT",
    "RaspberryPi",
    "OpenHAB"
  ],
  "devDependencies": {
    "@bazel/typescript": "^1.7.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/lodash": "^4.14.165",
    "@types/node": "^13.13.9",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.2.0",
    "chai-events": "0.0.3",
    "coveralls": "^3.1.0",
    "eslint": "^7.15.0",
    "mocha": "^7.2.0",
    "nyc": "^14.1.1",
    "shx": "^0.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@chrispyduck/homie-device": "^0.1.23",
    "@chrispyduck/homie-sensors": "file:../homie-sensors",
    "@types/mathjs": "^6.0.9",
    "lodash": "^4.17.20",
    "mathjs": "^8.1.0",
    "winston": "^3.3.3"
  },
  "scripts": {
    "start": "npx ts-node src/index.ts",
    "watch": "watch 'npm run test' .",
    "clean": "npx shx rm -rf .nyc_output/ node_modules/ dist/ docs/ tsconfig.tsbuildinfo tsconfig.src.tsbuildinfo",
    "build": "npx tsc --build src",
    "rebuild": "npm run clean && npm install && npm run build",
    "test": "npx nyc --source-map --include 'src/**/*.ts' mocha --exit -r ts-node/register --grep '#Integration' --invert test/**/*.ts test/**/*.js",
    "test.all": "npx nyc --source-map --include 'src/**/*.ts' mocha --exit -r ts-node/register test/**/*.ts test/**/*.js",
    "coverage": "npx nyc report --reporter=text-lcov | coveralls",
    "lint": "npx eslint 'src/**/*.ts' 'test/**/*.ts'"
  }
}
